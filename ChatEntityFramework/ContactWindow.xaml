        <Setter Property="Background" Value="#393B40"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListViewItem">
                    <Border Background="{TemplateBinding Background}"
                            Height="50"
                            CornerRadius="4"
                            Margin="8,2,8,2">
                        <StackPanel Orientation="Horizontal"
                                Margin="10,0,0,0">

                            <Ellipse Height="30" Width="30">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="{Binding m_imageSource}"/>
                                </Ellipse.Fill>
                            </Ellipse>
                            <StackPanel>
                                <Label Content="{Binding m_username}"
                                       Foreground="White"/>
                                <Label Content="{Binding LastMessage}"
                                       Foreground="White"
                                       FontSize="10"/>
                                <Label Content="{Binding Payload_Text}"
                                       Foreground="White"
                                       FontSize="13"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
